{
    "name": "yiisoft/yii-jquery",
    "type": "library",
    "description": "Yii Framework jQuery Extension",
    "keywords": [
        "yii",
        "jquery",
        "javascript",
        "client script"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/yii-jquery",
        "issues": "https://github.com/yiisoft/yii-jquery/issues",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "nyholm/psr7": "^1.0",
        "psr/event-dispatcher": "1.0.0",
        "yiisoft/assets": "^2.0",
        "yiisoft/html": "^2.0"
    },
    "require-dev": {
        "foxy/foxy": "^1.0",
        "phan/phan": "^3.0",
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.2",
        "yiisoft/cache": "^1.0",
        "yiisoft/composer-config-plugin": "^1.0@dev",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/event-dispatcher": "^1.0",
        "yiisoft/log": "^1.0",
        "yiisoft/yii-dataview": "^3.0@dev"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "Yiisoft\\Yii\\JQuery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Yii\\JQuery\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "tests": "tests.php"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
